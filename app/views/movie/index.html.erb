<div class="container">
    <form action="new_movie">
        
  
  
          <div class="form-group">
            <label for="title">영화 추가</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="영화">
          </div>
          <button type="submit" class="btn btn-primary">추가</button>
        
    </form>
    
</div>


<div class="container">
    <% @movies.each do |movie| %>
    <section class="row">
        <div class="col-md-3 poster">
            <img src="<%= movie.poster %>" />
            
        </div>
        <div class="col-md-9 content">
        <p>Title : <%= movie.realTitle %></p>
        <p>Directors : <%= movie.director %></p>
        <p>Runtime : <%= movie.runtime %></p>
        <p>Genre : <%= movie.genre %></p>
        <form action="edit" method="get">
                    <textarea name="id" style="display:none;"><%= movie.id %></textarea>
                    <button type="submit" class="btn btn-info">수정</button>
                </form>
                <form action="delete" method="get">
                    <textarea name="id" style="display:none;"><%= movie.id %></textarea>
                    <button type="submit" class="btn btn-danger">삭제</button>
                </form>
        </div>
        
    </section>
    <%end%>
</div>