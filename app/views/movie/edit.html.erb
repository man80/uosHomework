<div class="container">
  <h1>영화 수정 페이지</h1>
</div>
<div class="container">
    <form action = "update" method = "get">
        <section class = "row">
            <div class = "col-md-3 poster">
                <img src ="<%= @edit_movie.poster %>" />
            </div>
            <div class = "col-md-9 content">
                <textarea name="id" style="display:none;"><%= @edit_movie.id %></textarea>
                <textarea class="form-control" name="realTitle" id="content" rows="3"><%= @edit_movie.id %></textarea>
                <textarea class="form-control" name="director" id="content" rows="3"><%= @edit_movie.id %></textarea>
                <textarea class="form-control" name="runtime" id="content" rows="3"><%= @edit_movie.id %></textarea>
                <textarea class="form-control" name="genre" id="content" rows="3"><%= @edit_movie.id %></textarea>
                
                
            </div>
            
            
        </section>
        <button type = "submit" class = "btn btn-info">수정 완료</button>
    </form>
    
</div>